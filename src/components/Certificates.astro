<section class="certificates">
    <div class="cert-container">

        <p class="cert-label">LICENSE & CERTIFICATION</p>

        <h2>
            Fully Licensed & Professionally Trained
        </h2>

        <p class="cert-description">
            Certified by recognized institutions and licensed by the Arizona Department of Health Services to provide
            safe and professional laser treatments.
        </p>

        <div class="cert-grid">
            <div class="cert-card">
                <img src="/images/cert1.jpg" alt="Arizona Department of Health License"/>
            </div>
            <div class="cert-card">
                <img src="/images/cert2.jpg" alt="SAA Laser Institute Certificate"/>
            </div>
            <div class="cert-card">
                <img src="/images/cert3.jpg" alt="Laser Training Certification"/>
            </div>
            <div class="cert-card">
                <img src="/images/cert4.jpg" alt="Laser Training Certification"/>
            </div>
        </div>

    </div>
    <div id="lightbox" class="lightbox">
        <img id="lightbox-img" src="" alt="Certificate Preview" />
    </div>
</section>

<script>
    const images = document.querySelectorAll('.cert-card img');
    const lightbox = document.getElementById('lightbox');
    const lightboxImg = document.getElementById('lightbox-img');

    images.forEach(img => {
        img.addEventListener('click', () => {
            lightboxImg.src = img.src;
            lightbox.classList.add('active');
        });
    });

    lightbox.addEventListener('click', () => {
        lightbox.classList.remove('active');
    });

    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
            lightbox.classList.remove('active');
        }
    });
</script>


<style>

    .cert-card img {
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .cert-card img:hover {
        transform: scale(1.03);
    }


    .cert-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .cert-grid img {
        width: 100%;
        border: 1px solid #eee;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
    }

    .card h3 {
        font-size: 1.2rem;
    }

    .card strong {
        display: block;
        margin-top: 0.5rem;
        font-size: 1.1rem;
    }

    .lightbox {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.85);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transition: 0.3s ease;
        z-index: 2000;
    }

    .lightbox.active {
        opacity: 1;
        visibility: visible;
    }

    .lightbox img {
        max-width: 90%;
        max-height: 90%;
        border-radius: 10px;
        box-shadow: 0 25px 60px rgba(0,0,0,0.5);
    }
</style>