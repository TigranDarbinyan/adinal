<section id="location" class="location">
    <div class="location-container">

        <p class="location-label">LOCATION</p>

        <h2>Visit Adinal Laser Studio in Scottsdale</h2>

        <div class="location-grid">

            <div class="location-info">

                <div class="info-block">
                    <h4>Address</h4>
                    <p>
                        6730 E McDowell Rd #139<br/>
                        Scottsdale, AZ 85257
                    </p>
                </div>

                <div class="info-block">
                    <h4>Phone</h4>
                    <p>
                        <a href="tel:+16028933883">+1 602 893 3883</a>
                    </p>
                </div>

                <div class="info-block">
                    <h4>Hours</h4>
                    <p>Tuesday – Saturday<br/>9:30am – 6:00pm</p>
                </div>

            </div>

            <div class="location-map">
                <iframe
                        src="https://www.google.com/maps?q=6730+E+McDowell+Rd+Scottsdale+AZ+85257&output=embed"
                        width="100%"
                        height="350"
                        style="border:0;"
                        loading="lazy"
                ></iframe>
            </div>

        </div>

    </div>
</section>

<style>
    .location {
        padding: 6rem 1.5rem;
        background: #fff;
    }

    .location-container {
        max-width: 1100px;
        margin: 0 auto;
        text-align: center;
    }

    .location-label {
        font-size: 0.8rem;
        letter-spacing: 2px;
        color: #777;
        margin-bottom: 1rem;
    }

    .location h2 {
        font-family: 'Playfair Display', serif;
        font-size: clamp(1.8rem, 3vw, 2.4rem);
        margin-bottom: 3rem;
    }

    .location-grid {
        display: grid;
        grid-template-columns: 1fr 1.2fr;
        gap: 3rem;
        align-items: start;
    }

    .location-info {
        text-align: left;
    }

    .info-block {
        margin-bottom: 2rem;
    }

    .info-block h4 {
        font-size: 0.9rem;
        letter-spacing: 1px;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
    }

    .info-block p {
        color: #444;
    }

    .location-info a {
        color: #000;
        text-decoration: none;
        font-weight: 500;
    }

    .location-map iframe {
        border-radius: 14px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.05);
    }

    @media (max-width: 900px) {
        .location-grid {
            grid-template-columns: 1fr;
        }

        .location-info {
            text-align: center;
        }
    }
</style>